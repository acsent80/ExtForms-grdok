		Настройки.Вставить("ОбщиеДанные",       Истина);
		Настройки.Вставить("РазделенныеДанные", Истина);
		Настройки.Вставить("Конфигурация",      Ложь);
		Настройки.Вставить("Расширения",        Истина);
		
		Если РежимНастройки = ""
