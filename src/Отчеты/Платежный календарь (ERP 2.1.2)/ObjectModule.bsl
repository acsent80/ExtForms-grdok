	Запрос.УстановитьПараметр("СтрокаЗаказКлиента",               НСтр("ru='Заказ клиента'"));
	Запрос.УстановитьПараметр("СтрокаВедомостьЧерезБанк",         НСтр("ru='Ведомость на выплату зарплаты через банк'"));
