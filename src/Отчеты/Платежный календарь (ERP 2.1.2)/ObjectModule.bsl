	Соответствие.Вставить(1, НСтр("ru='Доступные остатки денежных средств'"));
	Соответствие.Вставить(2, НСтр("ru='Итого просроченных платежей'")); // Просроченные платежи
	Соответствие.Вставить(3, НСтр("ru='Итого платежей за день'"));    // Запланированные платежи
	
	СоответствиеОстаток = Новый Соответствие;
	СоответствиеОстаток.Вставить(1, НСтр("ru='Доступные остатки денежных средств'"));
